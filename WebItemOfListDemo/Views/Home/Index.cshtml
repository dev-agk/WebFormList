@using WebItemOfListDemo.Models
@model List<Item>
@{
    ViewData["Title"] = "Home Page";
}
@for (var item = 0; item < Model.Count(); item++)
{
    @await Html.PartialAsync("_Item", Model[item]);
}
@section Scripts{
    <script type="text/javascript">
        $('input[type=radio]').on('click', function () {
            console.log($(this).closest('form').serialize());
            $(this).closest('form').submit();   // don't pass in an handler if you want to trigger an event, 
                                                // otherwise you'll just bind an event handler, the form itself is not submitted.
        });
    </script>
}
